<div>
  <h1><%= @inventory.name %></h1>
  <div > <%= link_to 'Add food', new_inventory_inventory_food_path(current_user.id) %></div>
 <table class="table">
        <thead>
            <tr>
            <th >Food</th>
            <th >Quantity</th>
            <th >Price</th>
            <th >Actions</th>
            </tr>
        </thead>

        <tbody>
        <% @foods.each do |food|%>
            <tr>
            <td><%= food.food.name %></td>
            <td><%= food.quantity %></td>
            <td><%= food.food.price %></td>
            <td><%= button_to "Delete Food", inventory_inventory_food_path(@inventory, food.id), method: :delete, class: "btn btn-primary" %> </td>
            
            </tr>
            <% end %>
        </tbody>


        </table>

</div>